<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-bordered" style="margin-bottom: 20px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Products</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.products.count %></td>
        <td>
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Destroy', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
